<h2>Edit Contact</h2>

<%= form_for @contact , url: {action: "update"} do |f| %>
  <p>
    <%= f.label "Name" %><br>
    <%= f.text_field "name" %>
  </p>
  <p>
    <%= f.label "Email" %><br>
    <%= f.text_field "email" %>
  </p>
  <p>
    <%= f.label "Phone Number" %><br>
    <%= f.text_field "number" %>
  </p>

  <p>
    <%= f.submit "Save" %> 
  </p>
<% end %>

<%= link_to "Back to Contacts", user_contacts_path(current_user.id) %>